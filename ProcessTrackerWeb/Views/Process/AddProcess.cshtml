@model ProcessViewModel

<form method="post">
    <div class="mb-3">
        <label class="form-label" asp-for="ProcessName">Process Name:</label>
        <input type="text" class="form-control" asp-for="ProcessName">
        <span asp-validation-for="ProcessName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="FolderToApply">Folder path to apply:</label>
        <input disabled type="text" class="form-control" value="/Users/arslan/Desktop/Folder" asp-for="FolderToApply">
        <span asp-validation-for="FolderToApply" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="RunDate">Run Date:</label>
        <input type="date" class="form-control" asp-for="RunDate">
        <span asp-validation-for="RunDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}